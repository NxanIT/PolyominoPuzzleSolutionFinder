<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.ColorPicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="540.0" prefWidth="960.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="app.BrickViewController">
   <children>
      <BorderPane layoutX="167.0" layoutY="136.0" AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="10.0">
         <center>
            <StackPane fx:id="brickStackPane" prefHeight="447.0" prefWidth="796.0" />
         </center>
         <top>
            <Label fx:id="TextConfigureBrick" text="Configure Brick" BorderPane.alignment="CENTER">
               <font>
                  <Font size="18.0" />
               </font>
            </Label>
         </top>
         <left>
            <VBox prefHeight="493.0" prefWidth="143.0" spacing="15.0" BorderPane.alignment="CENTER">
               <children>
                  <HBox>
                     <children>
                        <Label fx:id="TextBeforeBrickID" text="Brick ID: " />
                        <Text fx:id="TextBrickID" strokeType="OUTSIDE" strokeWidth="0.0" text="42" />
                     </children>
                  </HBox>
                  <HBox alignment="CENTER_LEFT" spacing="10.0">
                     <children>
                        <CheckBox fx:id="selectCustomColor" mnemonicParsing="false" onAction="#updateCustomColorEnabled" text="custom color" />
                     </children>
                  </HBox>
                  <ColorPicker fx:id="customColorPicker" disable="true" onAction="#updateColor" prefHeight="30.0" />
                  <Label alignment="CENTER" contentDisplay="CENTER" text="size of the grid:">
                     <font>
                        <Font name="System Bold" size="14.0" />
                     </font>
                  </Label>
                  <HBox alignment="CENTER_RIGHT" prefHeight="20.0" spacing="10.0">
                     <children>
                        <Label text="width" />
                        <TextField fx:id="brickWidth" onAction="#updateGridDimensions" prefHeight="25.0" prefWidth="50.0" text="5" />
                     </children>
                  </HBox>
                  <HBox alignment="CENTER_RIGHT" prefHeight="20.0" spacing="10.0">
                     <children>
                        <Label text="height" />
                        <TextField fx:id="brickHeight" onAction="#updateGridDimensions" prefHeight="25.0" prefWidth="50.0" text="5" />
                     </children>
                  </HBox>
                  <Label text="looking at z-Layer:">
                     <font>
                        <Font name="System Bold" size="14.0" />
                     </font>
                  </Label>
                  <VBox alignment="CENTER" prefHeight="112.0" prefWidth="123.0" spacing="10.0">
                     <children>
                        <Button fx:id="buttonLayerUp" graphicTextGap="0.0" mnemonicParsing="false" onAction="#increaseLayerViewed" prefHeight="18.0" prefWidth="33.0" text="↑">
                           <font>
                              <Font name="System Bold" size="18.0" />
                           </font>
                        </Button>
                        <HBox alignment="CENTER">
                           <children>
                              <TextField fx:id="brickLayerViewed" alignment="TOP_CENTER" prefHeight="44.0" prefWidth="40.0" text="0" />
                           </children>
                        </HBox>
                        <Button fx:id="buttonLayerDown" mnemonicParsing="false" onAction="#decreaseLayerViewed" text="↓">
                           <font>
                              <Font size="18.0" />
                           </font>
                        </Button>
                     </children>
                  </VBox>
               </children>
               <padding>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </padding>
            </VBox>
         </left>
         <bottom>
            <HBox alignment="CENTER_RIGHT" prefHeight="40.0" prefWidth="200.0" spacing="20.0" BorderPane.alignment="CENTER">
               <children>
                  <Button cancelButton="true" mnemonicParsing="false" onAction="#cancelConfiguration" text="Cancel">
                     <font>
                        <Font name="System Bold" size="12.0" />
                     </font>
                  </Button>
                  <Button defaultButton="true" mnemonicParsing="false" onAction="#saveConfiguration" text="Save" textFill="#27c732">
                     <font>
                        <Font name="System Bold" size="12.0" />
                     </font>
                  </Button>
               </children>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </HBox>
         </bottom>
      </BorderPane>
   </children>
</AnchorPane>
